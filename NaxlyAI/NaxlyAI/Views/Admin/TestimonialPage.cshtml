@model NaxlyAI.Models.ViewModels.TestimonialModel
@{
    ViewData["Title"] = ViewData["PageDesc"];
}

<h3>@ViewData["PageDesc"]</h3>
<form enctype="multipart/form-data" method="POST">
    <div class="form-group">
        <label asp-for="Fullname">Reviewer's Fullname</label>
        <input asp-for="Fullname" class="form-control form-control-lg" />
        <span asp-validation-for="Fullname" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Photo">Reviewer's Photo</label>
        <input asp-for="Photo" class="form-control-file" />
        <span asp-validation-for="Photo" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Review">Review</label>
        <input asp-for="Review" class="form-control form-control-lg" />
        <span asp-validation-for="Review" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Designation">Reviewer's Designation</label>
        <input asp-for="Designation" class="form-control form-control-lg" />
        <span asp-validation-for="Designation" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="NumberOfStars">Number of Stars</label>
        <input asp-for="NumberOfStars" max="5" min="0" class="form-control form-control-lg" />
        <span asp-validation-for="NumberOfStars" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary mb-2">@ViewData["Button"]</button>
</form>