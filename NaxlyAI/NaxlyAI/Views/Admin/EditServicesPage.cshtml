@model NaxlyAI.Models.ViewModels.ServicesPageModel

<h3>@ViewData["PageDesc"]</h3>
<form enctype="multipart/form-data" asp-controller="Admin" asp-action="EditServicesPage" method="POST">
    <div class="form-group">
        <label asp-for="PageHeader">Page Header</label>
        <input asp-for="PageHeader" class="form-control form-control-lg" />
        <span asp-validation-for="PageHeader" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Explanation">Services Explanation</label>
        <input asp-for="Explanation" class="form-control form-control-lg" />
        <span asp-validation-for="Explanation" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="ExplanationAboutIndustries">Explanation About Industries</label>
        <input asp-for="ExplanationAboutIndustries" class="form-control form-control-lg" />
        <span asp-validation-for="ExplanationAboutIndustries" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="VideoUrl">Video URL</label>
        <input asp-for="VideoUrl" class="form-control form-control-lg" />
        <span asp-validation-for="VideoUrl" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="AwardText">Text of Award Section</label>
        <input asp-for="AwardText" class="form-control form-control-lg" />
        <span asp-validation-for="AwardText" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="AwardPicture">Picture of Award</label>
        <input asp-for="AwardPicture" class="form-control-file" />
        <span asp-validation-for="AwardPicture" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="AwardDescription">Description of Award Section</label>
        <input asp-for="AwardDescription" class="form-control form-control-lg" />
        <span asp-validation-for="AwardDescription" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary mb-2">@ViewData["Button"]</button>
</form>
