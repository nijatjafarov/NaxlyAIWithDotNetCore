@model NaxlyAI.Models.Subservice
@{
    ViewData["Title"] = ViewData["PageDesc"];
}

<h3>@ViewData["PageDesc"]</h3>
<form method="POST">
    <div class="form-group">
        <label asp-for="ServiceId">Choose Parent Service</label>
        <select asp-for="ServiceId" class="custom-select"
                asp-items="@(new SelectList(new NaxlyAIContext().Services, nameof(Service.Id),
    nameof(Service.Name)))"></select>
        <span asp-validation-for="ServiceId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Icon">Icon</label>
        <input asp-for="Icon" class="form-control form-control-lg" />
        <span asp-validation-for="Icon" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Name">Subservice Name</label>
        <input asp-for="Name" class="form-control form-control-lg" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Description">Description</label>
        <input asp-for="Description" class="form-control form-control-lg" />
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Type">Type</label>
        <input asp-for="Type" class="form-control form-control-lg" />
        <span asp-validation-for="Type" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Url">URL</label>
        <input asp-for="Url" class="form-control form-control-lg" />
        <span asp-validation-for="Url" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary mb-2">@ViewData["Button"]</button>
</form>