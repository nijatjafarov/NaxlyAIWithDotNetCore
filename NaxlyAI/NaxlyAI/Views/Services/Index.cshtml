<!-- award-style-two -->
<section class="award-style-two">
    <div class="auto-container">
        <div class="row clearfix">
            <div class="col-lg-4 col-md-12 col-sm-12 content-column">
                <div class="content-box">
                    <h3>@Model.ServicesPage.AwardText</h3>
                    <figure class="award-image"><img src="images/@Model.ServicesPage.AwardPicture" alt=""></figure>
                    <p>@Model.ServicesPage.AwardDescription</p>
                </div>
            </div>
            <div class="col-lg-8 col-md-12 col-sm-12 inner-column">
                <div class="testimonial-carousel-4 owl-carousel owl-theme owl-dots-none">
                    @foreach (Testimonial testimonial in Model.Testimonials)
                    {
                        <div class="testimonial-content">
                            <div class="inner-box">
                                <ul class="rating clearfix">
                                    @for (int i = 0; i < testimonial.NumberOfStars; i++)
                                    {
                                        <li><i class="flaticon-stars"></i></li>
                                    }
                                </ul>
                                <p>@testimonial.Review</p>
                                <div class="author-info">
                                    <figure class="image-box"><img src="images/@testimonial.Photo" alt=""></figure>
                                    <h4>@testimonial.Fullname</h4>
                                    <span class="designation">@testimonial.Designation</span>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</section>
<!-- award-style-two end -->
