@model NaxlyAI.Models.ViewModels.AppServices
@{
    ViewData["Title"] = "Services";
    ViewData["PageHeader"] = "Our Services";

}

@Html.Partial("PageTitle")

<!-- service-section-five -->
<section class="service-section-five">
    <div class="auto-container">
        <div class="sec-title text-center mb-60">
            <p>@Model.ServicesPage.PageHeader</p>
            <h2>@Model.ServicesPage.Explanation</h2>
            <div class="decor" style="background-image: url(images/icons/decor-1.png);"></div>
        </div>
        <div class="row clearfix">
            <div style="display:contents;" class="col-lg-12 col-md-12 col-sm-12 block-column">
            @{
                int index = 0;
            }
            @foreach (Service service in Model.Services)
            {
                string divClass = index % 2 == 0 ? "fadeInLeft" : "fadeInRight";
                var fields = new NaxlyAIContext().SubfieldOfServices.Where(s => s.ServiceId == service.Id);
                <div class="service-block-five wow @divClass col-lg-6 col-md-6 col-sm-12" data-wow-delay="00ms" data-wow-duration="1500ms">
                    <div class="inner-box">
                        <div class="icon-box"><i class="@service.Icon"></i></div>
                        <h3>
                            <a asp-controller="Services" asp-action="Service_Details" asp-route-id="@service.Id">
                                @service.Name
                            </a>
                        </h3>
                        <ul class="list-item clearfix">
                            @foreach (SubfieldOfService field in fields)
                            {
                                <li><span class="dots"></span>@field.Name</li>
                            }
                        </ul>
                        <figure class="image-box"><img src="images/@service.CoverPicture" alt=""></figure>
                        <div class="link">
                            <a asp-controller="Services" asp-action="Service_Details"
                               asp-route-id="@service.Id" class="btn-style-four">
                                Read More<span>+</span>
                            </a>
                        </div>
                    </div>
                </div>
                index++;
            }

            </div>
        </div>
    </div>
</section>
<!-- service-section-five end -->

@Html.Partial("Process")

