                            <div class="p-tab" id="p-tab-3">
                                <div class="service-carousel-3 owl-carousel owl-theme">
                                    @foreach (Industry industry in Model.Industries)
                                    {
                                        <div class="content-box">
                                            <div class="box">
                                                <div class="icon-box"><i class="@industry.Icon"></i></div>
                                                <span>Industry</span>
                                                <h4>@industry.Name</h4>
                                            </div>
                                            <div class="text">
                                                <p>@industry.Description</p>
                                            </div>
                                            <div class="btn-box">
                                                <a href="#" class="theme-btn style-one">Get Started<span>+</span></a>
