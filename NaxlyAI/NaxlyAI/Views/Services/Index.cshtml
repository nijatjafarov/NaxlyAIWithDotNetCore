                                            <div class="btn-box">
                                                <a href="#" class="theme-btn style-one">Get Started<span>+</span></a>
                                            </div>
                                        </div>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="tab-btn-box">
                <ul class="service-tab-btns tab-btns clearfix post-filter">
                    @{ int industryIndex = 1;}
                    @foreach (Industry industry in Model.Industries)
                    {
                        <li class="p-tab-btn active-btn" data-tab="#p-tab-@industryIndex">
                            <div class="btn-inner">
                                <div class="icon-box"><i class="@industry.Icon"></i></div>
                                <h4>@industry.Name</h4>
                            </div>
                        </li>
                        industryIndex++;
                    }
                </ul>
            </div>
        </div>
    </div>
</section>
